<div class="container-fluid">
  <div class="center-block">
    <div class="text-center">
      <h1>カテゴリ一覧</h1>
    </div>
  </div>
  <div class="center-block">
    <table class="table table-striped">
      <thead class="thead-dark">
      <tr>
        <th>カテゴリ名</th>
      </tr>
      <div class="float-end"><%= link_to '新規作成', new_family_category_path, class: 'btn btn-primary', data: { turbo_frame: 'new_category' } %></div>
      </thead>
      <tbody>
        <%= turbo_frame_tag Category.new %>
        <div id="categories">
          <%= render @categories %>
        </div>
      </tbody>
    </table>
  </div>
</div>