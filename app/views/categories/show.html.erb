<!--そのカテゴリに属するタスク一覧のページ。タスク管理画面へ飛ぶ-->
<div class="container-fluid">
  <div class="center-block">
    <div class="text-center">
      <h1><%= "タスク：#{@category.name}" %></h1>
    </div>
  </div>
  <div class="center-block">
    <table class="table table-striped">
      <thead class="thead-dark">
      <tr>
        <th>タスク名</th>
        <th>pt</th>
      </tr>
      </thead>
      <tbody>
        <%= render partial: 'task', collection: @tasks, locals: { family: @family, category: @category } %>
      </tbody>
    </table>
  </div>
</div>