<div class="form-group">
  <%= f.label :name, '名字' %>
  <%= f.text_field :name, value: family.name, class: "form-control", placeholder: '例：山田' %>
</div>
<div class="form-group">
  <%= f.label :nickname, 'ニックネーム' %>
  <%= f.text_field :nickname, value: family.nickname, class: "form-control", placeholder: '例：きのこ' %>
</div>
<div class="form-group">
  <%= f.label :budget, 'お小遣い予算' %>
  <%= f.number_field :budget, value: family.budget, step: 1000, class: "form-control" %>
</div>
<%= f.submit '登録する', class: "btn btn-primary" %>
