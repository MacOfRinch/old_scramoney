<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, value: family.name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :nickname %>
  <%= f.text_field :nickname, value: family.nickname, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :budget %>
  <%= f.number_field :budget, value: family.budget, step: 1000, class: "form-control" %>
</div>
<%= f.submit '登録する', class: "btn btn-primary" %>
