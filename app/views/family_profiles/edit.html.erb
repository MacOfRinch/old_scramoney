<% content_for(:title, '家族のプロフィール編集') %>
<div class="container-fluid">
  <div class="center-block">
    <div class="text-center">
      <h1>家族のプロフィール編集</h1>
    </div>
    <% if @family.errors.any? %>
    <div class="alert alert-danger">
      <% @family.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
    <% end %>
    <%= form_with model: @family, url: family_profile_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :nickname, 'ニックネーム' %>
        <%= f.text_field :nickname, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, 'イメージ' %>
        <%= f.file_field :avatar, class: 'form-control' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <% if @family.avatar.present? %>
      <div class="mb-3 mt-3">
        <%= image_tag @user.avatar.url class: 'rounded-circle', id: 'preview', size: '100x100' %>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :budget, 'お小遣い予算' %>
        <%= f.number_field :budget, class: 'form-control' %>
      </div>
      <%= f.submit '変更承認申請をする', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>