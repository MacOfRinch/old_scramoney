<% content_for(:title, '家族プロフィール') %>
<div class="container-fluid">
  <div class="row">
    <div class="col-10 offset-1">
      <h1 class="float-left mb-5">家族プロフィール</h1>
      <%= link_to '編集', edit_family_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row">名前</th>
          <td>
            <%= @family.name %>
          </td>
        </tr>
        <tr>
          <th scope="row">ニックネーム</th>
          <td><%= @family.nickname %></td>
        </tr>
        <!--<tr>
          <th scope="row">アバター</th>
          <td>
            <%= image_tag @family.avatar.url, class: 'rounded-circle mr-15', size: '100x100' %>
          </td>
        </tr>-->
        <tr>
          <th scope="row">お小遣い予算</th>
          <td>
            <%= @family.budget.to_s(:delimited) %>円
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
