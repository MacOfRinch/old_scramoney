<% content_for(:title, '招待された方へ') %>
<div class="container-fluid">
  <div class="row">
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </div>
    <% end %>
    <div class="form-group">
      <%= form_with model: @user, url: invited_path, local: true do |f| %>
        <%= render 'shared/new_user_form', { user: @user, f: f } %>
        <div class="form-group">
          <%= f.label :family_id, '招待コード' %>
          <%= f.text_field :family_id, class: 'form-control', value: params[:invitation_code] %>
        </div>
        <div class="center-block py-2">
          <div class="text-center">
            <%= f.submit '登録', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
