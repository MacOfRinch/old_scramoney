<div class="container-fluid pocket_money-container">
<% case @notice.notice_type %>
<% when "pocket_money" %>
  <div class="center-block bg-light">
    <div class="text-center">
      <p>お疲れ様でした！</p>
      <h1><%= "あなたの今月のお小遣いは・・・#{current_user.calculate_pocket_money_of_last_month.to_s(:delimited)}円です！" %></h1>
    </div>
  </div>
  <div class="center-block bg-light">
    <div class="text-center"><p>先月の結果</p></div>
    <% if @family.sum_points_of_last_month != 0 %>
      <%= pie_chart @each_name_points %><br>
    <% else %>
      <p class="text-center">先月のデータがありません</p>
    <% end %>
    <div class="text-center"><p><%= "お小遣い予算：#{@family.budget_of_last_month.to_s(:delimited)}円" %></p></div>
    <div class="d-flex justify-content-around">
      <%= render partial: 'user', collection: @users %>
    </div>
  </div>
<% when "approval_request" %>
  <%= render partial: 'show_approval_request', locals: { family: @family, new_data: @new_family_data, request: @request } %>
<% end %>
</div>
