<%= turbo_frame_tag task do %>
  <div class="row bg-secondary-subtle py-2 mx-auto">
    <div class="col-1"></div>
    <div class="col-6"><%= task.title %></div>
    <div class="col-2"><%= task.points %></div>
    <div class="col-3" id="record" data-controller="record">
      <%= link_to '-', decrement_family_record_path(@family, task), class: 'btn btn-outline-danger', data: { task_id: task.id, turbo_method: :patch, action: "click->record#decrement" } %>
      <!--<%= form_with model: @task_user, url: family_records_path(@family) do |f| %>-->
      <%= f.number_field "tasks[#{task.id}][count]", class: 'form-control', value: record.count, data: { task_id: task.id, record_target: "value" } %>
      <%= link_to '+', increment_family_record_path(@family, task), class: 'btn btn-outline-primary', data: { task_id: task.id, turbo_method: :patch, action: "click->record#increment" } %>
      <%= hidden_field_tag "tasks[#{task.id}][id]", task.id %>
      <%= hidden_field_tag "task_id", task.id %>
      <!--<% end %>-->
    </div>
  </div>
<% end %>