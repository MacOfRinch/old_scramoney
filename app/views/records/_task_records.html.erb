
<%= link_to family_record_path(task.user.family, task), class: "text-decoration-none text-body" do %>
  <div class="row bg-secondary-subtle py-2 my-2 mx-auto rounded">
    <div class="col-1 d-flex align-items-center">▶︎</div>
    <div class="col-3 d-flex align-items-center"><%= task.user.nickname.present? ? task.user.nickname : task.user.name %></div>
    <div class="col-4 d-flex align-items-center"><%= task.count >= 2 ? "#{task.task.title} x #{task.count}" : task.task.title %></div>
    <div class="col-1 d-flex align-items-center"><%= task.task.points * task.count.to_i %></div>
    <div class="col-3 d-flex align-items-center"><%= l(task.created_at, format: :short) %></div>
  </div>
<% end %>
