<%= turbo_frame_tag record do %>
  <%= link_to family_record_path(@family, record), class: "text-decoration-none text-body" do %>
    <div class="row bg-secondary-subtle py-2 my-2 mx-auto rounded">
      <div class="col-1 d-flex align-items-center">▶︎</div>
      <div class="col-3 d-flex align-items-center"><%= record.user.nickname.present? ? record.user.nickname : record.user.name %></div>
      <div class="col-4 d-flex align-items-center"><%= record.count >= 2 ? "#{record.task.title} x #{record.count}" : record.task.title %></div>
      <div class="col-1 d-flex align-items-center"><%= record.task.points * record.count.to_i %></div>
      <div class="col-3 d-flex align-items-center"><%= l(record.created_at, format: :short) %></div>
    </div>
  <% end %>
<% end %>