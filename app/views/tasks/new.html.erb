<div class="container-fluid">
  <div class="center-block">
    <div class="text-center">
      <h1>新しいタスクの登録</h1>
    </div>
  </div>
  <div class="center-block">
    <div class="">
    <% if @task.errors.any? %>
      <%= @task.errors.full_messages do |message| %>
        <%= message %>
      <% end %>
    <% end %>
      <ul>
        <%= form_with model: @task, url: family_tasks_path(@family) do |f| %>
          <%= render partial: 'shared/task_form', locals: { f: f } %>
          <div class="text-center">
            <%= f.submit '登録' %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>