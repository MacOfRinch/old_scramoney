<% content_for(:title, '自分のプロフィール編集') %>
<div class="container-fluid">
  <div class="center-block bg-light">
    <div class="text-center py-2">
      <h1>自分のプロフィール編集</h1>
    </div>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
    <% end %>
    <%= form_with model: @user, url: family_user_profile_path(@family, @user), local: true do |f| %>
      <div class="form-group mx-2">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :nickname, 'ニックネーム' %>
        <%= f.text_field :nickname, class: 'form-control' %>
      </div>
      <!--<div class="form-group">
        <%= f.label :avatar, 'イメージ' %>
        <%= f.file_field :avatar, class: 'form-control' %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <% if @user.avatar.present? %>
      <div class="mb-3 mt-3">
        <%= image_tag @user.avatar.url class: 'rounded-circle', id: 'preview', size: '100x100' %>
      </div>
      <% end %>-->
      <div class="text-center py-2">
        <%= f.submit '変更する', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>